{
  "manifest_version": 2,

  "name": "Remove Newsfeed",
  "description": "This extension will remove the newsfeed from facebook",
  "version": "0.1.1",

  "browser_action": {
   "default_icon": "icon48.png",
   "default_popup": "popup.html"
  },
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
             "128": "icon128.png" },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/",
        "https://www.facebook.com/*sk*"
      ],
      "css" : ["style.css"]
    }
  ],
  "permissions": [
   "activeTab"
   ]
}
